<div class="container mx-auto px-4 py-8">
  <div class="max-w-2xl mx-auto">
    <div class="flex items-center mb-6">
      <%= link_to cv_generator_path(@cv_candidate), class: "text-gray-600 hover:text-gray-900 mr-4" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
        </svg>
      <% end %>
      <h1 class="text-2xl font-bold">Edit Candidate: <%= @cv_candidate.name %></h1>
    </div>

    <div class="bg-white rounded-lg shadow-lg p-6">
      <%= form_with model: @cv_candidate, url: cv_generator_path(@cv_candidate), method: :patch, class: "space-y-6" do |form| %>
        <% if @cv_candidate.errors.any? %>
          <div class="bg-red-50 p-4 rounded-md">
            <h2 class="text-red-800 text-sm font-medium">
              <%= pluralize(@cv_candidate.errors.count, "error") %> prohibited this candidate from being saved:
            </h2>
            <ul class="mt-3 list-disc list-inside text-red-600">
              <% @cv_candidate.errors.each do |error| %>
                <li><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div>
          <%= form.label :name, "Candidate Name", class: "block text-sm font-medium text-gray-700" %>
          <%= form.text_field :name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
        </div>

        <div>
          <%= form.label :original_resume, "Original Resume (optional)", class: "block text-sm font-medium text-gray-700" %>
          <%= form.text_area :original_resume, rows: 4, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
          <p class="mt-1 text-sm text-gray-500">Original resume text for reference</p>
        </div>

        <div>
          <%= form.label :structured_data, "JSON Data", class: "block text-sm font-medium text-gray-700" %>
          <%= form.text_area :structured_data, 
              value: @cv_candidate.structured_data.to_json,
              rows: 15, 
              class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 font-mono text-sm" %>
          <p class="mt-1 text-sm text-gray-500">
            JSON structure with candidate data
          </p>
        </div>

        <div class="flex justify-end gap-4">
          <%= link_to "Cancel", cv_generator_path(@cv_candidate), class: "px-4 py-2 border rounded-md hover:bg-gray-50" %>
          <%= form.submit "Save Changes", class: "px-4 py-2 bg-blue-500 text-white rounded-md hover:bg-blue-600" %>
        </div>
      <% end %>
    </div>

    <!-- Danger Zone -->
    <div class="bg-white rounded-lg shadow-lg p-6 mt-6 border-l-4 border-red-500">
      <h2 class="text-lg font-semibold text-red-700 mb-4">Danger Zone</h2>
      <p class="text-gray-600 mb-4">
        Deleting a candidate will also delete all associated resume generations. 
        This action cannot be undone.
      </p>
      <%= button_to "Delete Candidate", 
          cv_generator_path(@cv_candidate), 
          method: :delete,
          class: "bg-red-500 hover:bg-red-600 text-white font-medium py-2 px-4 rounded",
          confirm: "Are you sure? This action cannot be undone.",
          form: { data: { turbo_confirm: "Are you sure you want to delete candidate #{@cv_candidate.name}? All associated resume generations will also be deleted." } } %>
    </div>
  </div>
</div>
