<div class="container mx-auto px-4 py-8">
  <div class="flex items-center mb-6">
    <%= link_to cv_generators_path, class: "text-gray-600 hover:text-gray-900 mr-4" do %>
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
      </svg>
    <% end %>
    <h1 class="text-2xl font-bold"><%= @cv_candidate.name %></h1>
    <span class="ml-4 px-3 py-1 bg-blue-100 text-blue-800 rounded-full text-sm">
      <%= @cv_candidate.current_role %>
    </span>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
    <!-- Candidate Information -->
    <div class="lg:col-span-1">
      <div class="bg-white rounded-lg shadow-lg p-6 mb-6">
        <h2 class="text-lg font-semibold mb-4">Candidate Information</h2>
        
        <div class="space-y-3">
          <div>
            <span class="text-sm font-medium text-gray-500">Name:</span>
            <p class="text-gray-900"><%= @cv_candidate.name %></p>
          </div>
          
          <div>
            <span class="text-sm font-medium text-gray-500">Role:</span>
            <p class="text-gray-900"><%= @cv_candidate.current_role %></p>
          </div>
          
          <div>
            <span class="text-sm font-medium text-gray-500">Projects:</span>
            <p class="text-gray-900"><%= @cv_candidate.projects.count %></p>
          </div>
          
          <div>
            <span class="text-sm font-medium text-gray-500">Skills:</span>
            <p class="text-gray-900"><%= @cv_candidate.skills_qualifications.count %></p>
          </div>
          
          <div>
            <span class="text-sm font-medium text-gray-500">Languages:</span>
            <p class="text-gray-900"><%= @cv_candidate.languages.count %></p>
          </div>
        </div>

        <div class="mt-6 pt-6 border-t">
          <%= link_to "Edit", edit_cv_generator_path(@cv_candidate), 
              class: "w-full bg-gray-500 hover:bg-gray-600 text-white font-medium py-2 px-4 rounded text-center block" %>
        </div>
      </div>

      <!-- Skills -->
      <div class="bg-white rounded-lg shadow-lg p-6">
        <h3 class="text-lg font-semibold mb-4">Skills</h3>
        <div class="space-y-3">
          <% @cv_candidate.skills_qualifications.each do |skill| %>
            <div>
              <span class="text-sm font-medium text-gray-700"><%= skill['title'] %>:</span>
              <p class="text-gray-600 text-sm"><%= skill['description'] %></p>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Resume Generation -->
    <div class="lg:col-span-2">
      <div class="bg-white rounded-lg shadow-lg p-6">
        <h2 class="text-lg font-semibold mb-4">Resume Generation</h2>
        
        <% if @examples.any? %>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-6">
            <% @examples.each do |example| %>
              <div class="border rounded-lg p-4 hover:bg-gray-50">
                <div class="flex justify-between items-start mb-3">
                  <div>
                    <h3 class="font-medium"><%= example.title %></h3>
                    <p class="text-gray-600 text-sm">Format: <%= example.format.capitalize %></p>
                  </div>
                </div>
                
                <%= form_with url: generate_with_template_cv_generator_path(@cv_candidate, example), 
                    method: :post, remote: true, class: "generate-form", 
                    data: { turbo: false } do |form| %>
                  <%= form.submit "Generate", 
                      class: "w-full bg-blue-500 hover:bg-blue-600 text-white font-medium py-2 px-4 rounded text-sm",
                      data: { 
                        candidate_id: @cv_candidate.id,
                        example_id: example.id,
                        disable_with: "Generating..."
                      } %>
                <% end %>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="text-center py-8">
            <p class="text-gray-500 mb-4">No templates available for generation</p>
            <%= link_to "Create Template", new_example_path, 
                class: "bg-green-500 hover:bg-green-600 text-white font-medium py-2 px-4 rounded" %>
          </div>
        <% end %>

        <!-- Generation Result -->
        <div id="generation-result" class="hidden">
          <div class="flex justify-between items-center mb-4">
            <h3 class="text-lg font-semibold">Generation Result</h3>
            <div class="flex space-x-2">
              <a id="edit-generation-link" href="#" class="px-4 py-2 bg-blue-500 text-white rounded-md hover:bg-blue-600 text-sm">
                Edit in Editor
              </a>
              <button onclick="document.getElementById('generation-result').classList.add('hidden')" 
                      class="px-4 py-2 bg-gray-500 text-white rounded-md hover:bg-gray-600 text-sm">
                Close
              </button>
            </div>
          </div>
          <div class="border rounded-lg p-4 bg-gray-50">
            <iframe id="preview-frame" class="w-full h-96 border-0"></iframe>
          </div>
        </div>
      </div>

      <!-- Generation History -->
      <% if @cv_generations.any? %>
        <div class="bg-white rounded-lg shadow-lg p-6 mt-6">
          <h2 class="text-lg font-semibold mb-4">Generation History</h2>
          
          <div class="space-y-4">
            <% @cv_generations.each do |generation| %>
              <div class="border rounded-lg p-4">
                <div class="flex justify-between items-start">
                  <div>
                    <h3 class="font-medium"><%= generation.example.title %></h3>
                    <p class="text-gray-600 text-sm">
                      Created: <%= generation.created_at.strftime("%d.%m.%Y at %H:%M") %>
                    </p>
                  </div>
                  <div class="flex space-x-2">
                    <%= link_to "Edit", edit_content_cv_generation_path(generation), 
                        class: "text-blue-500 hover:text-blue-700 text-sm" %>
                    <button onclick="showPreview('<%= generation.id %>')" 
                            class="text-green-500 hover:text-green-700 text-sm">
                      Preview
                    </button>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  // Handle AJAX generation forms
  document.querySelectorAll('.generate-form').forEach(form => {
    form.addEventListener('ajax:success', function(event) {
      const [data, status, xhr] = event.detail;
      if (data.success && data.html) {
        showGenerationResult(data.html, data.edit_url);
      } else {
        alert('Error generating resume');
      }
    });
    
    form.addEventListener('ajax:error', function(event) {
      console.error('Generation error:', event.detail);
      alert('Error generating resume');
    });
  });
});

function showGenerationResult(html, editUrl) {
  const resultDiv = document.getElementById('generation-result');
  const iframe = document.getElementById('preview-frame');
  const editLink = document.getElementById('edit-generation-link');
  
  resultDiv.classList.remove('hidden');
  iframe.srcdoc = html;
  
  // Set edit link
  if (editUrl && editLink) {
    editLink.href = editUrl;
  }
  
  // Scroll to result
  resultDiv.scrollIntoView({ behavior: 'smooth' });
}

function showPreview(generationId) {
  // Add logic for showing specific generation
  console.log('Show preview for generation:', generationId);
}
</script>
