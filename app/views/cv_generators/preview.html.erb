<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Предпросмотр резюме - <%= @cv_candidate.name %></title>
  <style>
    <%= @cv_generation.generated_css %>
    
    /* Дополнительные стили для предпросмотра */
    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
      line-height: 1.6;
      color: #333;
      max-width: 210mm;
      margin: 0 auto;
      padding: 20px;
      background: white;
    }
    
    .cv-variable {
      background-color: transparent !important;
      border: none !important;
      padding: 0 !important;
      color: inherit !important;
    }
    
    @media print {
      body {
        padding: 0;
        margin: 0;
      }
    }
  </style>
</head>
<body>
  <%= raw @cv_generation.generated_html %>
  
  <script>
    // Автоматическая подгонка размера iframe родителя
    if (window.parent !== window) {
      function resizeIframe() {
        const height = document.body.scrollHeight;
        window.parent.postMessage({
          type: 'resize',
          height: height
        }, '*');
      }
      
      // Изменение размера при загрузке и изменении содержимого
      window.addEventListener('load', resizeIframe);
      window.addEventListener('resize', resizeIframe);
      
      // Наблюдение за изменениями в DOM
      const observer = new MutationObserver(resizeIframe);
      observer.observe(document.body, {
        childList: true,
        subtree: true,
        attributes: true
      });
    }
  </script>
</body>
</html>
