<div class="container mx-auto px-4 py-8">
  <div class="max-w-4xl mx-auto">
    <div class="flex justify-between items-center mb-8">
      <h1 class="text-3xl font-bold"><%= @example.title %></h1>
      <div class="flex gap-4">
        <%= link_to "Edit", edit_example_path(@example), class: "px-4 py-2 bg-blue-500 text-white rounded-md hover:bg-blue-600" %>
        <%= link_to "Back", examples_path, class: "px-4 py-2 border rounded-md hover:bg-gray-50" %>
      </div>
    </div>

    <div class="bg-white rounded-lg shadow-lg overflow-hidden mb-8">
      <div class="p-6">
        <div class="flex justify-between items-center mb-4">
          <div class="text-gray-600">
            Format: <%= @example.format.capitalize %>
          </div>
          <div class="text-gray-600">
            Status: <%= @example.published ? "Published" : "Draft" %>
          </div>
        </div>

        <div class="border-t pt-4">
          <h2 class="text-xl font-semibold mb-4">Preview</h2>
          
          <%# Preview with custom styles %>
          <div class="preview-container">
            <style>
              /* Base styles for headings */
              h1 { font-size: 2.25rem; font-weight: 800; margin-bottom: 1rem; }
              h2 { font-size: 1.875rem; font-weight: 700; margin-bottom: 0.875rem; }
              h3 { font-size: 1.5rem; font-weight: 600; margin-bottom: 0.75rem; }
              /* Custom styles */
              <%= @example.css %>
            </style>
            <div class="w-[210mm] mx-auto bg-white shadow-lg">
              <%= @example.html.html_safe %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="flex justify-between items-center">
      <div class="flex gap-4">
        <%= link_to "Download DOC", download_example_path(@example), class: "px-4 py-2 bg-green-500 text-white rounded-md hover:bg-green-600" %>
        <%= link_to "Download PDF", "#", class: "px-4 py-2 bg-purple-500 text-white rounded-md hover:bg-purple-600" %>
      </div>
      
      <%= button_to "Delete Example", 
          example_path(@example), 
          method: :delete, 
          class: "px-4 py-2 bg-red-500 text-white rounded-md hover:bg-red-600",
          form: { data: { turbo_confirm: "Are you sure?" } } %>
    </div>
  </div>
</div>