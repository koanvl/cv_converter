{
  "name": "app",
  "private": true,
  "devDependencies": {
    "esbuild": "^0.25.6"
  },
  "scripts": {
    "build": "esbuild app/javascript/*.* --bundle --sourcemap --format=esm --outdir=app/assets/builds --public-path=/assets",
    "build:css": "npx @tailwindcss/cli -i ./app/assets/stylesheets/application.tailwind.css -o ./app/assets/builds/application.css --minify",
    "watch:js": "esbuild app/javascript/*.* --bundle --sourcemap --format=esm --outdir=app/assets/builds --public-path=/assets --watch",
    "watch:css": "npx @tailwindcss/cli -i ./app/assets/stylesheets/application.tailwind.css -o ./app/assets/builds/application.css --watch"
  },
  "dependencies": {
    "@hotwired/stimulus": "^3.2.2",
    "@hotwired/turbo-rails": "^8.0.16",
    "@tailwindcss/cli": "^4.1.11",
    "@tiptap/core": "^3.4.0",
    "@tiptap/extension-blockquote": "^3.4.0",
    "@tiptap/extension-bold": "^3.4.0",
    "@tiptap/extension-bullet-list": "^3.4.0",
    "@tiptap/extension-code-block": "^3.4.0",
    "@tiptap/extension-heading": "^3.4.0",
    "@tiptap/extension-horizontal-rule": "^3.4.0",
    "@tiptap/extension-image": "^3.4.0",
    "@tiptap/extension-italic": "^3.4.0",
    "@tiptap/extension-link": "^3.4.0",
    "@tiptap/extension-list-item": "^3.4.0",
    "@tiptap/extension-ordered-list": "^3.4.0",
    "@tiptap/extension-placeholder": "^3.4.0",
    "@tiptap/extension-strike": "^3.4.0",
    "@tiptap/extension-table": "^3.4.0",
    "@tiptap/extension-table-cell": "^3.4.0",
    "@tiptap/extension-table-header": "^3.4.0",
    "@tiptap/extension-table-row": "^3.4.0",
    "@tiptap/extension-text-align": "^3.4.0",
    "@tiptap/extension-underline": "^3.4.0",
    "@tiptap/pm": "^3.4.0",
    "@tiptap/starter-kit": "^3.4.0",
    "grapesjs": "^0.22.11",
    "grapesjs-blocks-basic": "^1.0.2",
    "grapesjs-preset-webpage": "^1.0.3",
    "tailwindcss": "^4.1.11"
  }
}
